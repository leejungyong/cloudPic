.menus{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  background: #fff;
  padding: 20rpx 0;
}
page{
  background: var(--background);
}
.menu{
  width: 25%;
  text-align: center;
  font-size: 28rpx;
}
.menu .img-box{
  display:inline-block;
  width: 110rpx;
  height: 110rpx;
  line-height: 110rpx;
  background-color: rgba(255, 152, 0, 0.07);
  text-align: center;
  border: 1px solid rgba(255, 152, 0, 1);
  border-radius: 50%;
  vertical-align: middle;
  box-sizing: border-box;
  padding-top:20rpx;
}
.menu .img-box .img{
  width: 60rpx;
  height: 60rpx; 
}